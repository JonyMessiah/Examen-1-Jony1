@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
    <script src="~/js/pages/Articles/ArticleList.js"></script>
    <script src="~/js/pages/Articles/GridDefinition.js"></script>
 }

<div class="text-center">
    <h1 class="display-4">Articles</h1>
    <form>
        <div class="form-group">
            <label for="txtSearch">Search criteria</label>
            <input id="txtSearch" type="text" class="form-control" placeholder="Type a search phrase" />
            <button id="btnSearch" type="button" class="btn btn-primary">Search</button>
            <button id="btnNewArticle" type="button" class="btn btn-primary">Create New</button>
        </div>
        <div id="myGrid" style="height: 500px; width:100%;" class="ag-theme-alpine"></div>

        <!--Modal configuration-->
        <div id="myModal" class="modal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Request Information</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <div id="articleTitle">
                                <h3>title</h3>
                            </div>
                            <div id="QRContent">
                            </div>
                            <div>
                                <label for="txtEmail">Email:</label>
                                <input id="txtEmail" type="email" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="btnSendEmail" type="button" class="btn btn-primary">Send</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>
