@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
    <script src="~/js/pages/Authors/AuthorsList.js"></script>
    <script src="~/js/pages/Authors/GridDefinition.js"></script>
 }

    <div class="text-center">
        <h1 class="display-4">Authors</h1>
        <form>
            <div class="form-group">
                <label for="txtSearch">Search criteria</label>
                <input id="txtSearch" type="text" class="form-control" placeholder="Type a name to search" />
                <button id="btnSearch" type="button" class="btn btn-primary">Search</button>
            </div>
            <div id="myGrid" style="height: 500px; width:100%;" class="ag-theme-alpine"></div>

            <!--Modal configuration-->
            <div id="myModal" class="modal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Request Information</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <div id="authorName">
                                    <h3>First name</h3>
                                </div>
                                <div id="QRContent">
                                </div>
                             
                            </div>
                        </div>
               
                    </div>
                </div>
            </div>

        </form>
    </div>
